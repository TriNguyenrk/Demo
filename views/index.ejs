<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Thêm ô tô</title>
    <script>

        function validateForm() {
            const maXe = document.getElementById('MaXe').value;
            const name = document.getElementById('Name').value;
            const price = document.getElementById('Price').value;
            const year = document.getElementById('Year').value;
            const brand = document.getElementById('Brand').value;

            if (!maXe.trim()) {
                alert('MaXe không được để trống');
                return false;
            }

            if (!name.trim()) {
                alert('Name không được để trống');
                return false;
            }

            if (!/^[a-zA-Z\s]+$/.test(name)) {
                alert('Name phải chỉ chứa chữ cái và khoảng trắng');
                return false;
            }

            if (!price.trim()) {
                alert('Price không được để trống');
                return false;
            }

            if (isNaN(price)) {
                alert('Price phải là số');
                return false;
            }

            if (!year.trim()) {
                alert('Year không được để trống');
                return false;
            }

            if (isNaN(year) || year < 1980 || year > 2024) {
                alert('Year phải từ 1980 đến 2024');
                return false;
            }

            if (!brand.trim()) {
                alert('Brand không được để trống');
                return false;
            }

            alert('Thêm ô tô thành công!');
            return true;
        }

    </script>
</head>
<body>
<header>
    <h1>Hệ Thống Quản Lý Ô Tô</h1>
</header>

<div class="container">
    <h2>Thêm Ô Tô Mới</h2>

    <form action="/add-car" method="POST" onsubmit="return validateForm()">
        <label for="MaXe">MaXe:</label>
        <input type="text" id="MaXe" name="MaXe" required value="<%= car.MaXe || '' %>"><br>

        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" required value="<%= car.Name || '' %>"><br>

        <label for="Price">Price:</label>
        <input type="number" id="Price" name="Price" required value="<%= car.Price || '' %>"><br>

        <label for="Year">Year:</label>
        <input type="number" id="Year" name="Year" required value="<%= car.Year || '' %>"><br>

        <label for="Brand">Brand:</label>
        <input type="text" id="Brand" name="Brand" required value="<%= car.Brand || '' %>"><br>

        <input type="submit" value="Thêm Ô Tô">
    </form>
</div>

</body>
</html>
